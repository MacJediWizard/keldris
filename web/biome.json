{
	"$schema": "https://biomejs.dev/schemas/2.0.0/schema.json",
	"files": {
		"includes": [
			"src/**/*.ts",
			"src/**/*.tsx",
			"portal/src/**/*.ts",
			"portal/src/**/*.tsx",
			"*.css"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": { "noExplicitAny": "error" },
			"correctness": {
				"noUnusedImports": "error",
				"noUnusedVariables": "error"
			}
		}
	},
	"formatter": { "indentStyle": "tab" },
	"javascript": {
		"formatter": { "quoteStyle": "single", "semicolons": "always" }
	},
	"assist": {
		"actions": {
			"source": {
				"organizeImports": {
					"level": "on"
				}
			}
		}
	}
}
