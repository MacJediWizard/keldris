{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"files": {
		"include": [
			"src/**/*.ts",
			"src/**/*.tsx",
			"portal/src/**/*.ts",
			"portal/src/**/*.tsx",
			"*.css"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": { "noExplicitAny": "error" },
			"correctness": {
				"noUnusedImports": "error",
				"noUnusedVariables": "error"
			}
		}
	},
	"formatter": { "indentStyle": "tab" },
	"javascript": {
		"formatter": { "quoteStyle": "single", "semicolons": "always" }
	},
	"organizeImports": {
		"enabled": true
	}
}
