{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"files": {
		"include": [
			"src/**/*.ts",
			"src/**/*.tsx",
			"portal/src/**/*.ts",
			"portal/src/**/*.tsx",
			"*.css"
		]
	},
		"ignore": ["node_modules", "dist", "*.json", "*.config.js", "*.config.ts"]
	},
	"organizeImports": { "enabled": true },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": { "noExplicitAny": "error" },
			"correctness": {
				"noUnusedImports": "error",
				"noUnusedVariables": "error"
			}
		}
	},
	"overrides": [
		{
			"include": ["src/pages/Documentation.tsx"],
			"linter": {
				"rules": {
					"security": {
						"noDangerouslySetInnerHtml": "off"
					}
				}
			}
		}
	],
	"formatter": { "indentStyle": "tab" },
	"javascript": {
		"formatter": { "quoteStyle": "single", "semicolons": "always" }
	},
	"organizeImports": {
		"enabled": true
	"formatter": { "indentStyle": "tab" },
	"javascript": {
		"formatter": { "quoteStyle": "single", "semicolons": "always" }
	}
}
